<Window x:Class="JERP.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="JERP - Just Employee Resource Planning"
        Height="768" Width="1366"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="20,20,20,30">
                    <TextBlock Text="JERP" FontSize="28" FontWeight="Bold" 
                               Foreground="{DynamicResource SystemControlForegroundAccentBrush}"/>
                    <TextBlock Text="{Binding CurrentUser.Username}" FontSize="12" 
                               Opacity="0.7" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" Margin="10,0">
                    <Button Content="Dashboard" Height="45" HorizontalContentAlignment="Left" 
                            Command="{Binding ShowDashboardCommand}" Margin="0,2">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMenuItem}" Value="Dashboard">
                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Employees" Height="45" HorizontalContentAlignment="Left" 
                            Command="{Binding ShowEmployeesCommand}" Margin="0,2">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMenuItem}" Value="Employees">
                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Timesheets" Height="45" HorizontalContentAlignment="Left" 
                            Command="{Binding ShowTimesheetsCommand}" Margin="0,2">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMenuItem}" Value="Timesheets">
                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Payroll" Height="45" HorizontalContentAlignment="Left" 
                            Command="{Binding ShowPayrollCommand}" Margin="0,2">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMenuItem}" Value="Payroll">
                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Compliance" Height="45" HorizontalContentAlignment="Left" 
                            Command="{Binding ShowComplianceCommand}" Margin="0,2">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMenuItem}" Value="Compliance">
                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Finance" Height="45" HorizontalContentAlignment="Left" 
                            Command="{Binding ShowFinanceCommand}" Margin="0,2">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMenuItem}" Value="Finance">
                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Logout Button -->
                <Button Grid.Row="2" Content="Logout" Height="45" Margin="10,10,10,20"
                        Command="{Binding LogoutCommand}"/>
            </Grid>
        </Border>

        <!-- Content Area -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="0"/>
    </Grid>
</Window>
