{
  "DatabaseSettings": {
    "Provider": "SqlServer",
    "AutoMigrate": true,
    "UseWindowsAuthentication": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/jerp-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithEnvironmentName", "WithThreadId"]
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyForJWT-ChangeThisInProduction-MinimumLength32Characters!",
    "Issuer": "JERP3.0",
    "Audience": "JERP3.0-Users",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=jerpdb;Username=postgres;Password=postgres",
    "PostgreSQL": "Host=postgres;Port=5432;Database=jerpdb;Username=postgres;Password=postgres",
    "MySQL": "Server=mysql;Port=3306;Database=jerpdb;Uid=root;Pwd=root;CharSet=utf8mb4",
    "SqlServer": "Server=localhost\\SQLEXPRESS;Database=JERP3_DB;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "SqlServerWindowsAuth": "Server=localhost\\SQLEXPRESS;Database=JERP3_DB;Integrated Security=True;TrustServerCertificate=True;Encrypt=False",
    "SqlServerLocalDB": "Server=(localdb)\\mssqllocaldb;Database=jerp_production;Integrated Security=True;"
  },
  "Compliance": {
    "ViolationRetentionDays": 365,
    "MinimumWageCA": 16.00,
    "MinimumWageFederal": 7.25,
    "OvertimeThreshold": 8.0,
    "DoubleTimeThreshold": 12.0,
    "MaxDailyHours": 16.0,
    "RequireBreaks": true
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      },
      "Https": {
        "Url": "https://0.0.0.0:5001"
      }
    }
  }
}
