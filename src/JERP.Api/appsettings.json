{
  "DatabaseSettings": {
    "Provider": "PostgreSQL",
    "AutoMigrate": true,
    "UseWindowsAuthentication": false
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/jerp-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithEnvironmentName", "WithThreadId"]
  },
  "Jwt": {
    "SecretKey": "your-secret-key-min-32-characters-long-change-in-production",
    "Issuer": "JERP.Api",
    "Audience": "JERP.Clients",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=jerpdb;Username=postgres;Password=postgres",
    "PostgreSQL": "Host=postgres;Port=5432;Database=jerp_production;Username=jerp_user;Password=YourSecurePassword123!",
    "MySQL": "Server=mysql;Port=3306;Database=jerp_production;Uid=jerp_user;Pwd=YourSecurePassword123!;CharSet=utf8mb4;",
    "SqlServer": "Server=sqlserver,1433;Database=jerp_production;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True;Encrypt=False;",
    "SqlServerWindowsAuth": "Server=localhost;Database=jerp_production;Integrated Security=True;TrustServerCertificate=True;Encrypt=False;",
    "SqlServerLocalDB": "Server=(localdb)\\mssqllocaldb;Database=jerp_production;Integrated Security=True;"
  },
  "Compliance": {
    "ViolationRetentionDays": 365,
    "MinimumWageCA": 16.00,
    "MinimumWageFederal": 7.25,
    "OvertimeThreshold": 8.0,
    "DoubleTimeThreshold": 12.0,
    "MaxDailyHours": 16.0,
    "RequireBreaks": true
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      },
      "Https": {
        "Url": "https://0.0.0.0:5001"
      }
    }
  }
}
